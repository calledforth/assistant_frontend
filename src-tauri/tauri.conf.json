{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "productivity",
  "version": "0.1.0",
  "identifier": "com.tauri.dev",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "main",
        "width": 1250,
        "height": 750,
        "resizable": true,
        "fullscreen": false,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon/icon.ico",
      "icons/icon/icon_512.png",
      "icons/icon/icon_256.png",
      "icons/icon/icon_128.png",
      "icons/icon/icon_64.png",
      "icons/icon/icon_32.png"    
    ]
  }   
}
